<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders><!--es donde se muestra la informacion-->
        <Console name="STDOUT" target="SYSTEM_OUT"><!--stdout es la consola estandar de java -->
            <PatternLayout pattern="(%F:%L) - %m%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="com.opensymphony.xwork2" level="info" />
        <Logger name="org.apache.struts2" level="info" />
        <Root level="info">
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>
</Configuration>